{
  "name": "@universal-apps/ts-utils",
  "version": "1.0.0",
  "description": "A universal typescript utlitiy library",
  "main": "dist/lib/index.js",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "build": "pnpm run clean && concurrently 'pnpm run lint' 'tsc --incremental --noEmit' 'swc src -d dist'",
    "clean": "rm -rf ./dist",
    "publish": "npm install --include=dev && pnpm run clean && pnpm run build",
    "test": "vitest --run --dir 'src/test'",
    "test:ui": "vitest --ui --coverage --dir 'src/test'",
    "lint": "eslint --fix './src/**/*.ts'",
    "lint:nofix": "eslint './src/**/*.ts'"
  },
  "keywords": [
    "typescript",
    "ts",
    "utilities",
    "util",
    "functional",
    "fp"
  ],
  "author": "Prashanth R.",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/ui": "^0.34.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
