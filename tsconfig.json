{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "lib": ["ES2021"],
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "pretty": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "include": [
      "src/lib/**/*.ts"
    ],
    "exclude": [
      "node_modules", 
      "lib", 
      "src/examples/**/*.ts",
      "src/test/**/*.ts"
    ]
  }